@{
    ViewBag.Title = "Choice";
}

<h2>Make wrong answers for the question :@ViewBag.Question</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <label for="#">The first answer : </label>
        <input type="text" name="wrong_answers" class="form-control" />
    </div>
    <div class="form-group">
        <label for="#">The second answer : </label>
        <input type="text" name="wrong_answers" class="form-control" />
    </div>
    <div class="form-group">
        <label for="#">The third answer : </label>
        <input type="text" name="wrong_answers" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Add</button>
}
